#search
  = form_tag phrack_phrases_path, method: :get do
    - locale_options = options_for_select([nil] + @locale_names.map{|l| [l,l]}, params[:locale])
    = select_tag 'locale', locale_options
    = text_field_tag :search, params[:search], placeholder: 'Search for keys or values', size: 40
    = submit_tag 'Search', class: "btn btn-success"
- if @phrack_phrases.any?
  %table.all-phrases
    %thead
      %tr
        %th Key
        %th Value
    %tbody
      - @phrack_phrases.each do |t|
        %tr{onclick: "document.location = '/#{Phrack.route}/#{t.id}/edit'"}
          %td.key
            = link_to edit_phrack_phrase_path(t) do
              = t.key
          %td.value
            = t.value.try(:html_safe)
