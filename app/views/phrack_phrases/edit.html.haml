.edit
  %h2= @phrack_phrase.key
  = link_to "Delete Phrase", phrack_phrase_path(@phrack_phrase), class: "btn btn-danger delete-phrase", method: :delete, data: { confirm: 'Are you sure?' }
  = form_for @phrack_phrase, url: { action: "update" } do |f|
    = f.text_area :value, rows: 12
    = f.submit "Update", class: "btn btn-success submit-edit-phrase"
  %br
  - unless @phrack_phrase.versions.empty?
    %br
    %h2 Previous Versions
    %br
    %table.phrase-versions
      %tr
        %th Value
        %th Created_at
        %th
        %th
      - @phrack_phrase.versions.reverse.each do |version|
        %tr
          %td.phrack-version-value= version.value.html_safe
          %td.phrack-version-created_at= version.created_at.strftime("%d-%m-%Y %H:%M:%S")
          %td= link_to "Revert", phrack_phrase_path(@phrack_phrase.id, phrack_phrase: {value: version.value}), class: "btn btn-success", method: :put
          %td= link_to "Delete", phrack_phrase_version_path(version.id), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }
